                desc: 'ä»¥å®ä¼Ÿçš„è¾¾å°”ç­åŠ å®«æ®¿ï¼ˆDarbhanga Palaceï¼‰ä¸ºèƒŒæ™¯ï¼Œè¿™åº§å»ºç­‘ç”±ç ‚å²©å»ºæˆï¼Œå—åˆ°å¸Œè…ŠæŸ±å¼çš„å½±å“ï¼Œæ˜¯æ²³å›å»ºç­‘ä¸­æœ€ä»¤äººå°è±¡æ·±åˆ»çš„ç»“æ„ä¹‹ä¸€ï¼Œç°å·²éƒ¨åˆ†æ”¹å»ºä¸ºè±ªåé…’åº—ã€‚',
                time: 'å…¨å¤©',
                activity: 'å»ºç­‘æ¬£èµ'
            }
        ];

        // 2. State Management
        let currentTab = 'culture';
        let chartsInitialized = false;

        // --- CORE FUNCTIONS ---

        function init() {
            renderGhatList();
            // Default selection
            selectGhat(0);
        }

        // Tab Switching Logic
        function switchTab(tabId) {
            // Update UI State
            document.querySelectorAll('.nav-item').forEach(el => el.classList.remove('active'));
            document.getElementById(`nav-${tabId}`).classList.add('active');

            // Hide all views
            document.getElementById('view-culture').classList.add('hidden');
            document.getElementById('view-data').classList.add('hidden');
            document.getElementById('view-future').classList.add('hidden');

            // Show selected view
            const selectedView = document.getElementById(`view-${tabId}`);
            selectedView.classList.remove('hidden');

            // Lazy Load Charts
            if (tabId === 'data' && !chartsInitialized) {
                renderCharts();
                chartsInitialized = true;
            }
        }

        // --- CULTURE VIEW LOGIC ---

        function renderGhatList() {
            const container = document.getElementById('ghat-list');
            container.innerHTML = '';

            ghatsData.forEach((ghat, index) => {
                const el = document.createElement('div');
                el.className = `ghat-card p-3 mb-2 rounded border-l-2 border-transparent hover:bg-stone-50`;
                el.onclick = () => selectGhat(index);
                el.id = `ghat-item-${index}`;
                el.innerHTML = `
                    <div class="flex items-center justify-between">
                        <div class="font-bold text-gray-800">${ghat.icon} ${ghat.name}</div>
                        <div class="text-xs bg-stone-100 text-stone-600 px-2 py-1 rounded">${ghat.short}</div>
                    </div>
                `;
                container.appendChild(el);
            });
        }

        function selectGhat(index) {
            // Update Active Class
            document.querySelectorAll('.ghat-card').forEach(el => el.classList.remove('active'));
            document.getElementById(`ghat-item-${index}`).classList.add('active');

            // Update Content with Animation
            const content = document.getElementById('ghat-detail-content');
            content.style.opacity = 0;
            
            setTimeout(() => {
                const data = ghatsData[index];
                document.getElementById('detail-title').innerText = data.name;
                document.getElementById('detail-desc').innerText = data.desc;
                // Update detail context dynamically if needed
                content.style.opacity = 1;
            }, 200);
        }

        // --- DATA VIEW LOGIC (Chart.js) ---

        function renderCharts() {
            // 1. Tourism Trend Chart (Bar + Line)
            const ctxTourism = document.getElementById('tourismChart').getContext('2d');
            new Chart(ctxTourism, {
                type: 'bar',
                data: {
                    labels: ['2018', '2019', '2020', '2021', '2022', '2023', '2024 (Est)'],
                    datasets: [{
                        label: 'æ¸¸å®¢æ€»æ•° (ç™¾ä¸‡)',
                        data: [6.1, 6.4, 2.5, 3.1, 71.0, 85.0, 92.0], // Significant jump post-Corridor is real data trend
                        backgroundColor: '#D97706',
                        borderRadius: 4,
                        order: 2
                    }, {
                        label: 'å¢é•¿è¶‹åŠ¿',
                        data: [6.1, 6.4, 2.5, 3.1, 71.0, 85.0, 92.0],
                        borderColor: '#1F2937',
                        type: 'line',
                        tension: 0.4,
                        order: 1,
                        pointRadius: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': ' + context.parsed.y + ' M';
                                },
                                afterBody: function(context) {
                                    if (context[0].label === '2022') {
                                        return '\næ³¨æ„: èµ°å»Šé¡¹ç›®è½æˆåï¼Œ\næ¸¸å®¢æ•°é‡å‘ˆæŒ‡æ•°çº§å¢é•¿ã€‚';
                                    }
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { borderDash: [2, 4] }
                        },
                        x: {
                            grid: { display: false }
                        }
                    }
                }
            });

            // 2. Seasonality Chart (Line/Area)
            const ctxSeason = document.getElementById('seasonChart').getContext('2d');
            new Chart(ctxSeason, {
                type: 'line',
                data: {
                    labels: ['1æœˆ', '2æœˆ', '3æœˆ', '4æœˆ', '5æœˆ', '6æœˆ', '7æœˆ', '8æœˆ', '9æœˆ', '10æœˆ', '11æœˆ', '12æœˆ'],
                    datasets: [{
                        label: 'èˆ’é€‚åº¦/çƒ­åº¦æŒ‡æ•°',
                        data: [90, 85, 75, 40, 30, 35, 50, 60, 70, 85, 95, 95], // High in winter, Low in summer
                        borderColor: '#3B82F6',
                        backgroundColor: 'rgba(59, 130, 246, 0.1)',
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: { display: false },
                        x: { grid: { display: false } }
                    },
                    plugins: {
                        legend: { display: false }
                    }
                }
            });

            // 3. Purpose Doughnut Chart
            const ctxPurpose = document.getElementById('purposeChart').getContext('2d');
            new Chart(ctxPurpose, {
                type: 'doughnut',
                data: {
                    labels: ['å®—æ•™/æœåœ£', 'ä¼‘é—²æ—…æ¸¸', 'å†å²/æ–‡åŒ–ç ”ç©¶', 'å…¶ä»–'],
                    datasets: [{
                        data: [65, 20, 10, 5],
                        backgroundColor: ['#D97706', '#F59E0B', '#78716C', '#E5E7EB'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: { usePointStyle: true, boxWidth: 8 }
                        }
                    }
                }
            });
        }

        // Initialize App
        window.addEventListener('DOMContentLoaded', init);

    </script>
